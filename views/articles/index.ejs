<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1 class="mb-4 ">
            Blog Articles
        </h1>
        <!-- <a href="/articles/new" class="btn btn-success" style="border: 1px,solid,black;">New Article</a> -->

        <% articles.forEach((article) => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title  %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-description mb-2">
                        <%= article.description  %>
                    </div>
                    <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    <!-- <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form> -->
                </div>
                
              

            </div>

            <% }) %>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>